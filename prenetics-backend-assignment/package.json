{
    "name": "test",
    "version": "1.0.0",
    "license": "MIT",
    "private": true,
    "scripts": {
        "build": "rm -rf dist/ && tsc && cp -R src/resource dist/",
        "watch": "tsc -w",
        "dev": "cp -R src/resource dist/ && TZ=UTC NODE_ENV=dev nodemon --watch dist --max-old-space-size=2048 dist/index.js",
        "test": "tslint -p ./tsconfig.json 'src/**/*.{ts,tsx}' && nyc mocha --timeout 20000 --require ts-node/register --require source-map-support/register --recursive 'test/**/*.{ts,tsx}'"
    },
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "include": [
            "src/*.ts",
            "src/**/*.ts"
        ],
        "exclude": [
            "src/**/*.test.ts",
            "src/migration/**/*.ts"
        ],
        "extension": [
            ".ts"
        ],
        "reporter": [
            "text"
        ],
        "sourceMap": true,
        "instrument": true,
        "all": true,
        "check-coverage": true,
        "statements": 0,
        "branches": 0,
        "functions": 0,
        "lines": 0
    },
    "dependencies": {
        "express": "^4.16.3",
        "express-validator": "^5.2.0",
        "pg": "^7.8.0",
        "reflect-metadata": "^0.1.13",
        "request": "^2.88.0",
        "request-promise": "^4.2.4",
        "typeorm": "0.2.32",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.1",
        "@types/chai": "^4.1.7",
        "@types/express": "^4.16.1",
        "@types/mocha": "^8.0.3",
        "@types/node": "^10.12.26",
        "@types/request-promise": "^4.1.42",
        "@types/uuid": "^3.4.4",
        "chai": "^4.2.0",
        "mocha": "^7.1.1",
        "nodemon": "^2.0.2",
        "nyc": "^15.0.1",
        "ts-node": "^8.0.2",
        "tslint": "^5.12.1",
        "tslint-eslint-rules": "^5.4.0",
        "typescript": "^3.9.7"
    }
}
